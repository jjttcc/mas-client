#!/usr/bin/env bash
# Start the mas server for testing.
# vi: expandtab

script_path=$(dirname $0)
cd $script_path >/dev/null
if [ -z "$MASPORT" ]; then
    . ./.env
fi

# Exit if mas is already running.
if pgrep -laf "mas *-b.*$MASPORT" >/dev/null; then exit 0; fi
if pgrep -laf "masx.*-b.*$MASPORT" >/dev/null; then exit 0; fi
if pgrep -laf "oldmas *-b.*$MASPORT" >/dev/null; then exit 0; fi
mas -b -w -f , $MASPORT&
sleep 1 # Give the server a chance to start-up/initialize.
